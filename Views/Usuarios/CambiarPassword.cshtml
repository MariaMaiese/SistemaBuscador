@{
    var id = ViewBag.idUsuario;
}
@model UsuarioCambioPasswordModel
<h3>Cambiar Contraseña</h3>
<hr />

<div class="alert alert-success mt-3" role="alert">
    * La Contraseña debe tener al menos una mayúscula, minúsculas dígitos y 8 caracteres.
</div>

<div class="card">
    <div class="card-body">
        <form action="CambiarPassword" method="post">
            <input type="hidden" name="id" value="@id"/>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RePassword"></label>
                <input class="form-control" asp-for="RePassword" type="password" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
            <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
            <button class="btn btn-outline-success" type="submit">Guardar</button>

        </form>
    </div>
</div>