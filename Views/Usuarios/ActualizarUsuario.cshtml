@{
}
@model UsuarioEdicionModel
<h3>Actualizar Usuario</h3>
<hr />

<div class="card">
    <div class="card-body">
        <form action="ActualizarUsuario" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NombreUsuario"></label>
                <input class="form-control" asp-for="NombreUsuario" type="text" readonly />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombres"></label>
                <input class="form-control" asp-for="Nombres" type="text" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos"></label>
                <input class="form-control" asp-for="Apellidos" type="text" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RolId"></label>
                <select class="form-control" asp-for="RolId">
                    <option value="">--Seleccione--</option>
                    <option value="1">Administrador</option>
                    <option value="2">Supervisor</option>
                    <option value="3">Vendedor</option>
                </select>
                <span asp-validation-for="RolId" class="text-danger"></span>
            </div>

            <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
            <button class="btn btn-outline-success" type="submit">Guardar</button>

        </form>
    </div>
</div>