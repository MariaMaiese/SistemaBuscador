@{
}
@{
    ViewData["Title"] = "Página de Inicio";
    Layout = null;
}
@model LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> Sistema Buscador</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="row">
        <div class="col-6 container parte-izquierda">
            <div>
                <h1 class="titulo-h1">¡Bienvenido!</h1>
            </div>
            <div>
                <h3 class="titulo-h3 mt-5">Ingresa tu Usuario y Contraseña para continuar.</h3>
            </div>
        </div>
        <div class="container col-6">
            <div class="card-login">
                <div class="container">
                    <form method="post" asp-controller="Login" asp-action="Login">
                        <div >
                            <div ><label asp-for="Usuario"></label></div>
                            <div class="formulario"><input type="text" asp-for="Usuario" /></div>
                            <span class="text-danger" asp-validation-for="Usuario"></span>
                        </div>
                        <div>
                            <div><label asp-for="Password"></label></div>
                            <div class="input-group-append formulario">
                                <input type="password" asp-for="Password" />
                                <button id="boton-ojo" type="button" >
                                    <i id="icono-ojo" class="bi bi-eye"></i>
                                </button>
                            </div>

                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Ingresar</button>
                        <div asp-validation-summary="All" class="text-danger mt-3"></div>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            //accediendo al id del boton ojo
            $("#boton-ojo").click(function () {
                //toma como ID el asp-for. porque esta enlazado al campo password
                let tipo = $("#Password").attr("type");  //estoy leyendo la propiedad del elemento y la guardo en la variable tipo
                if (tipo == "password") {
                    $("#Password").attr("type", "text");  //cuando coloco 1 solo parameto es para obtenerlo, si coloco 2 es para modificarlo
                    $("#icono-ojo").removeClass("bi-eye");
                    $("#icono-ojo").addClass("bi-eye-slash");
                } else {
                    $("#Password").attr("type", "password");
                    $("#icono-ojo").removeClass("bi-eye-slash");
                    $("#icono-ojo").addClass("bi-eye");
                }
            });


        });


    </script>

</body>
</html>

