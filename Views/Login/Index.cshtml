@{
}
@{
    ViewData["Title"] = "Página de Inicio";
    Layout = null;
}
@model LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> Sistema Buscador</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body>

    <div class="container">
        <div class="card card-login">
            <div class="card-header bg-primary text-white">
                <h3>Ingreso al sistema</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Login" asp-action="Login">
                    <div class="form-group">
                        <label asp-for="Usuario"></label>
                        <input type="text" asp-for="Usuario" class="form-control" />
                        <span class="text-danger" asp-validation-for="Usuario"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <div class="input-group-append">
                            <input type="password" asp-for="Password" class="form-control" />
                            <button id="boton-ojo" type="button"class=" btn btn-outline-secondary">
                                <i id="icono-ojo" class="bi bi-eye"></i>
                            </button>                 
                        </div>

                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                    <div asp-validation-summary="All" class="text-danger mt-3"></div>
                </form>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            //accediendo al id del boton ojo
            $("#boton-ojo").click(function () {
                //toma como ID el asp-for. porque esta enlazado al campo password
                let tipo = $("#Password").attr("type");  //estoy leyendo la propiedad del elemento y la guardo en la variable tipo
                if (tipo == "password") {
                    $("#Password").attr("type", "text");  //cuando coloco 1 solo parameto es para obtenerlo, si coloco 2 es para modificarlo
                    $("#icono-ojo").removeClass("bi-eye");
                    $("#icono-ojo").addClass("bi-eye-slash");
                } else {
                    $("#Password").attr("type", "password");
                    $("#icono-ojo").removeClass("bi-eye-slash");
                    $("#icono-ojo").addClass("bi-eye");
                }
            });


        });


    </script>

</body>
</html>

